@model Shopily.ViewModel.User.RegisterVM

@{
  
    ViewData["Title"] = "Admin Create User PAGE";
}


<fieldset>

    <legend>Register</legend>
    <form action="/Admin/CreateUser" method="post">

        <div> @Html.LabelFor(m => m.FirstName)</div>
        <div>@Html.TextBoxFor(m => m.FirstName)</div>
        <div class="ValidationMessage">   @Html.ValidationMessageFor(m => m.FirstName)</div>
        <div> @Html.LabelFor(m => m.LastName)</div>
        <div>@Html.TextBoxFor(m => m.LastName)</div>
        <div class="ValidationMessage">   @Html.ValidationMessageFor(m => m.LastName)</div>
        <div> @Html.LabelFor(m => m.Username)</div>
        <div>@Html.TextBoxFor(m => m.Username)</div>
        <div class="ValidationMessage">   @Html.ValidationMessageFor(m => m.Username)</div>
        <div> @Html.LabelFor(m => m.Password)</div>
        <div>@Html.PasswordFor(m => m.Password)</div>
        <div class="ValidationMessage">  @Html.ValidationMessageFor(m => m.Password)</div>
        <div> @Html.LabelFor(m => m.Email)</div>
        <div>@Html.TextBoxFor(m => m.Email)</div>
        @Html.ValidationMessageFor(m => m.Email)
        <div>@Html.LabelFor(m => m.Role, "Is Admin?")</div>
        <div>@Html.CheckBoxFor(m => m.Role)</div>
        <div class="ValidationMessage">@Html.ValidationMessageFor(m => m.Role)</div>



        <input type="submit" value="CreateUser" />
    </form>


</fieldset>
