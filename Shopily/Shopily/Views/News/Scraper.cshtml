@{
    ViewData["Title"] = "Web Scraper";
}

<div class="container mt-5">
    <h2 class="text-center">Web Scraper</h2>
    <form method="post" action="/News/Scrape">
        <div class="mb-3">
            <label for="urlInput" class="form-label">Enter URL to Scrape:</label>
            <input type="url" class="form-control" id="urlInput" name="url" required placeholder="https://example.com/news">
        </div>
        <button type="submit" class="btn btn-primary">Scrape</button>
    </form>

    @if (ViewBag.Message != null)

    {
        <div class="alert alert-info mt-3">@ViewBag.Message</div>
    }

    @if (ViewBag.ScrapedContent != null)

    {
        <div class="mt-4">
            <h4>Scraped Content:</h4>
            <p>@ViewBag.ScrapedContent</p>
        </div>
    }
</div>
