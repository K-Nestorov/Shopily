@model Shopily.Domain.ViewModel.ContactVM

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header text-center bg-primary text-white">
                    <h2>Contact Us</h2>
                </div>
                <div class="card-body">
                    <form asp-action="SendMail" asp-controller="Home" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="formSource" value="contact">

                        <div class="mb-3">
                            <label for="Name" class="form-label">Name:</label>
                            <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter your name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="form-label">Email:</label>
                            <input asp-for="Email" type="email" class="form-control shadow-sm" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="PhoneNumber" class="form-label">Phone:</label>
                            <input asp-for="PhoneNumber" class="form-control shadow-sm" placeholder="Enter your phone number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Subject" class="form-label">Subject:</label>
                            <input asp-for="Subject" class="form-control shadow-sm" placeholder="Enter the subject" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Message" class="form-label">Message:</label>
                            <textarea asp-for="Message" class="form-control shadow-sm" rows="5" placeholder="Write your message here"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary shadow-sm">Send</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
