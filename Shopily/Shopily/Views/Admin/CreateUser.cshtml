@using Shopily.Domain.ViewModel.User
@model RegisterVM

@{
    ViewData["Title"] = "Admin Create User PAGE";
}

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h4>Create User</h4>
        </div>
        <div class="card-body">
            <form action="/Admin/CreateUser" method="post">

                <div class="mb-4">
                    @Html.LabelFor(m => m.FirstName, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", autocomplete = "new-password" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-4">
                    @Html.LabelFor(m => m.LastName, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", autocomplete = "new-password" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-4">
                    @Html.LabelFor(m => m.Username, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", autocomplete = "new-password" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>

                <div class="mb-4">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", autocomplete = "new-password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="mb-4">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", autocomplete = "new-password" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="mb-4">
                
                    <div class="form-check">
                        @Html.CheckBoxFor(m => m.Role, new { @class = "form-check-input" })
                        <label class="form-check-label">Is Admin</label>
                    </div>
                    @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-between">
                    <a href="/Admin/Index" class="btn btn-secondary btn-lg px-5">Back</a>
                    <button type="submit" class="btn btn-primary btn-lg px-5">Create User</button>
                </div>

            </form>
        </div>
    </div>
</div>
