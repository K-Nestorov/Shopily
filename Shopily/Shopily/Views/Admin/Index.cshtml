@using Shopily.Domain.Entity
@using Shopily.Domain.ViewModel.Admin
@model AdminIndexVm

@{
    ViewData["title"] = "USERS Admin View";
}
<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h4>User administrator</h4>
        </div>

    <div class="d-flex justify-content-end mb-4">
        <a class="btn btn-primary btn-lg" href="/CreateUser">Create New User</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-primary">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Is Admin</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (User item in Model.Items)
                {
                    <tr onclick="window.location.href='/Admin/AdminEdit?Id=@item.Id'" style="cursor:pointer;">
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Username</td>
                        <td>@item.Email</td>
                        <td>@(item.IsAdmin ? "Yes" : "No")</td>
                        <td class="text-center">
                            <a class="btn btn-warning btn-sm me-2" href="/Admin/AdminEdit?Id=@item.Id" onclick="event.stopPropagation();">Edit</a>
                            <a class="btn btn-danger btn-sm" href="/Admin/Delete?Id=@item.Id" onclick="event.stopPropagation();">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
